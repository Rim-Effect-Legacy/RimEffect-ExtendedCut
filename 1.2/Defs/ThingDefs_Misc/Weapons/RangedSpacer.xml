			<texPath>Things/Item/Equipment/WeaponRanged/SpacerAssaultRifle</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>RE_Interact_Avenger</soundInteract>
		<statBases>
			<Mass>3.2</Mass>
			<MarketValue>1500</MarketValue>
			<AccuracyTouch>0.65</AccuracyTouch>
			<AccuracyShort>0.44</AccuracyShort>
			<AccuracyMedium>0.35</AccuracyMedium>
			<AccuracyLong>0.25</AccuracyLong>
			<RangedWeapon_Cooldown>1.80</RangedWeapon_Cooldown>
		</statBases>
		<thingSetMakerTags>
			<li>RE_AcceleratorWeaponry</li>
		</thingSetMakerTags>
		<tradeTags>
			<li>RE_AllianceWeaponry</li>
			<li>RE_AllianceGun</li>
			<li>RE_SpacerWeaponry</li>
			<li>RE_SpacerGun</li>
		</tradeTags>
		<weaponTags Inherit='False'>
			<li>SpacerGun</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>RE_Bullet_SpacerAssaultRifle</defaultProjectile>
				<warmupTime>1.0</warmupTime>
				<range>23.9</range>
				<ticksBetweenBurstShots>12</ticksBetweenBurstShots>
				<burstShotCount>4</burstShotCount>
				<soundCast>RE_Shot_Avenger</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>stock</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
